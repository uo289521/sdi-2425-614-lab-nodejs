{% extends "layout.twig" %}
{% block title %} Agregar Autor {% endblock %}
{% block main_container %}
    <!-- Barra de Navegación superior -->
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="/images/logo.png" alt="logo"/>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li id="myshop" class="active"><a href="/shop">Tienda</a></li>
                    <li id="mypublication"><a href="/publication">Publicaciones</a></li>
                    <li id="mybuy"><a href="/buy">Compras</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Registrate</a></li>
                    <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Identifícate</a></li>
                </ul>
            </div>
        </div>
    </nav>
<h2>Agregar canción</h2>
<form class="form-horizontal" method="post" action="/authors/add">

    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Nombre:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="title" name="title" placeholder="Nombre  del Autor"
                    />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="grupo">Grupo:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="grupo" name="grupo" placeholder="Nombre del grupo"
                   />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="rol">Rol:</label>
        <div class="col-sm-10">
            <select class="form-control" id="rol" name="rol" required>
                <option value="cantante">Cantante</option>
                <option value="trompetista">Trompetista</option>
                <option value="violinista">Violinista</option>
                <option value="saxofonista">Saxofonista</option>
                <option value="pianista">Pianista</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
    </div>

</form>
{% endblock %}